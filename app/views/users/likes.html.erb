<%= render "shared/header" %>

<div class="box1">
<%=@user.first_name%> <%=@user.last_name%> 様のマイページ
<p><%= link_to '戻る' , user_path %></p>

</div>

<div class="box2">

<div class="left">
<ul>
  <li class="user"><%=link_to 'ユーザー情報',edit_user_path%> </li>
  <li class="user"><i class="fas fa-star yellow"></i>お気に入り一覧<i class="fas fa-star yellow"></i></li>
  <li class="user"> <%=link_to '出品した商品',listing_user_path %></li>
</ul>
</div>
</div>





 <div class="box3">

  <div class="right3">

      <div class="listings">
      いいね一覧
      </div>


    <% @likes.each do |like| %>
     <% item = Item.find_by(id: like.item_id) %>
     <%= link_to item_path(item.id) do %>   

         <div class="listing-box">
            <div class="listing-image">
              <%=image_tag item.images[0].variant(resize: "200x200")%>
            </div>

            <div class="listing1 ">
              <div class="listing-name">
               商品名：<%= item.name %>
              </div>

              <div class="listing-price">
              値段：<%= item.price%>円
              </div>
           </div>

        </div>

        <%end%>
      <%end%>
    </div>
  </div>
 